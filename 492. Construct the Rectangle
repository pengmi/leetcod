class Solution {
public:
    vector<int> constructRectangle(int area) {
        vector<int> ret(2,0);
        
        int l=area;
        int r=1;
        for(int i=1,j=l;i<=j;)
        {
            if(i*j==area)
            {
                l=j;
                r=i;
                j--;
            }
            else if(i*j>area)
            {
                j--;
            }
            else if(i*j<area)
            {
                i++;
            }
        }
        
        ret[0]=l;
        ret[1]=r;
        
        return ret;
    }
};
